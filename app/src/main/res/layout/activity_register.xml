<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/welcome"
                    android:layout_marginHorizontal="40dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Hallo Sobat Diabetes, silakan mengisi folmulir pendaftaran dibawah ini untuk membuat akun baru."
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/et_nama_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="masukkan nama anda"
                android:textSize="14sp"
                android:background="@drawable/rounded_editext"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="contoh@gmail.com"
                android:textSize="14sp"
                android:background="@drawable/rounded_editext"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"
                android:hint="masukkan password"
                android:textSize="14sp"
                android:background="@drawable/rounded_editext"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"/>

            <RadioGroup
                android:id="@+id/rg_jenis_kelamin_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                tools:ignore="ExtraText">
                <RadioButton
                    android:id="@+id/rb_laki_laki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/rb_perempuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"/>

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"/>

            <com.sindi.diabetseats.components.CustomEditText
                android:id="@+id/et_tanggal_lahir_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd-mm-yyyy"
                android:textSize="14sp"
                android:background="@drawable/rounded_editext"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tinggi Badan"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_tinggi_badan_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0 Cm"
                android:textSize="14sp"
                android:background="@drawable/rounded_editext"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berat Badan"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/et_berat_badan_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0 Kg"
                android:textSize="14sp"
                android:background="@drawable/rounded_editext"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="start"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_bold"
                android:background="@drawable/bg_btn"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="20dp"
                android:onClick="Daftar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Sudah punya akun? "
                    android:textSize="13sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_masuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masuk"
                    android:textColor="@color/merahh"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>